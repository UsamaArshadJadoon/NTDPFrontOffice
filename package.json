{
  "name": "ntdp-frontoffice-automation",
  "version": "1.0.0",
  "description": "Automated test suite for NTDP Front Office using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test --project=chromium",
    "test:all": "playwright test",
    "test:headed": "playwright test --project=chromium --headed",
    "test:debug": "playwright test --project=chromium --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:ci": "playwright test --reporter=junit,html",
    "test:ci:chromium": "playwright test --project=chromium --reporter=junit,html",
    "test:ci:firefox": "playwright test --project=firefox --reporter=junit,html",
    "test:ci:webkit": "playwright test --project=webkit --reporter=junit,html",
    "test:security": "playwright test tests/security.spec.ts --reporter=html",
    "test:security:basic": "playwright test tests/security.spec.ts --grep \"basic security scan\"",
    "test:security:owasp": "playwright test tests/security.spec.ts --grep \"OWASP Top 10\"",
    "test:security:vulnerabilities": "playwright test tests/security.spec.ts --grep \"common web vulnerabilities\"",
    "test:zap": "playwright test tests/zap-security.spec.ts --reporter=html",
    "test:zap:passive": "playwright test tests/zap-security.spec.ts --grep \"passive scan\" --reporter=html",
    "test:zap:spider": "playwright test tests/zap-security.spec.ts --grep \"spider scan\" --reporter=html",
    "test:zap:active": "playwright test tests/zap-security.spec.ts --grep \"active scan\" --reporter=html",
    "test:zap:full": "playwright test tests/zap-security.spec.ts --grep \"full ZAP scan\" --reporter=html",
    "test:zap:report": "playwright test tests/zap-security.spec.ts --grep \"comprehensive\" --reporter=html",
    "security:reports": "powershell -ExecutionPolicy Bypass -File .\\view-reports.ps1",
    "install:ci": "npx playwright install --with-deps",
    "lint": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "dotenv": "^16.3.1",
    "eslint": "^8.57.1",
    "eslint-plugin-playwright": "^0.18.0",
    "typescript": "^5.3.3",
    "zaproxy": "^2.0.0-rc.6"
  }
}
